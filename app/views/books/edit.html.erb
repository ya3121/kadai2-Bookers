<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
  <div class="field">
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  </div>
  <div class="field">
  <h4>本文</h4>
  <%= f.text_area :body %>
  </div>
  <div class="action">
  <%= f.submit 'Update Book' %>
  </div>
  <td><%= link_to "Show", book_path(@book.id) %></td>
  |
      <a class="back" href="/books">Back</a>
<% end %>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= @book.errors.count %> errors prohibited this product from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>